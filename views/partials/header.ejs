        <a class="navbar-brand" href="/"><i class="fa fa-picture-o" aria-hidden="true"></i> PhotoSite</a>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">

          <% if(!currentUser){ %>
            <li><a href="/login">Login</a></li>
