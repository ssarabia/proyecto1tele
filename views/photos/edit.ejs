<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Edit <%= photo.name %></h1>
    <div style="width:30%; margin: 30px auto;">
      <form class="" action="/photos/<%= photo._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Nombre" name="photo[name]" value="<%= photo.name %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="URL Imagen" name="photo[source]" value="<%= photo.source %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Descripcion" name="photo[description]" value="<%= photo.description %>">
        </div>
        <div class="form-group">
          <button class="btn btn-large btn-danger btn-block"> Submit! </button>
        </div>
      </form>
      <a href="/photos">Go back</a>

    </div>
  </div>
</div>

<% include ../partials/footer %>
